<div class="card card-login">
    <h1>Cadastro de Produto</h1>
    <form action="/produtos/cadastro" method="post" class="form-login">
        <label for="nome" class="label">Nome do Produto:</label>
        <input type="text" id="nome" name="nome" required class="input-form">

        <label for="estoque" class="label">Estoque:</label>
        <input type="number" step="0.01" id="estoque" name="estoque" required class="input-form">

        <label for="estoque_minimo" class="label">Estoque Mínimo:</label>
        <input type="number" step="0.01" id="estoque_minimo" name="estoque_minimo" required class="input-form">

        <label for="valor" class="label">Valor:</label>
        <input type="number" step="0.01" id="valor" name="valor" required class="input-form">

        <label for="imagem" class="label">Imagem (URL):</label>
        <input type="text" id="imagem" name="imagem" class="input-form">

        <label for="categoria" class="label">Categoria:</label>
        <select id="categoria" name="id_categoria" required class="input-form">
        <% categorias.forEach(categoria => { %>
            <option value="<%= categoria.id_categoria %>">
            <%= categoria.nome %>
            </option>
        <% }) %>
        </select>

        <button type="submit" class="botao-form botao-cadastrar">Cadastrar</button>
    </form>

    <a href="/produtos/listar" class="link-claro">Voltar para o armazém</a>
</div>